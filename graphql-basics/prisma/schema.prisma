// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
    id              Int     @id @default(autoincrement())
    organization    String
    name            String
    email           String
    age             Int?
    posts           String[]
    comments        String[]
}

model Post {
    id Int          @id @default(autoincrement())
    title           String
    body            String
    published       Boolean
    author          String
    comments        String[]
}

model Comment {
    id Int          @id @default(autoincrement())
    body            String
    author          String
    post            String
}
